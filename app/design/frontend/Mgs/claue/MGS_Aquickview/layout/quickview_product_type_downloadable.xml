<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
	<body>
		<move element="product.info.review" destination="product.quickview.info.main" after="product.quickview.info.name"/>	
		<move element="product.info.downloadable.samples" destination="product.info.options.wrapper" before="product.info.downloadable.options" />
		<move element="product.info.review" destination="product.quickview.info.main" after="product.quickview.info.name"/>
		<move element="product.info.type" destination="product.quickview.info.main" after="product.info"/>
		<move element="product.info.sku" destination="product.quickview.info.main" after="product.info.type"/>
		<referenceContainer name="product.quickview.info.main">
			<referenceContainer name="product.addto.links.additional" remove="true" />
		</referenceContainer>
	</body>
</layout>
