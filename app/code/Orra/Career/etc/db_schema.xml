<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="orra_career" resource="default" engine="innodb"
           comment="orra_career Table">
        <column xsi:type="int" name="id" nullable="false" identity="true" comment="Career ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Title"/>
        <column xsi:type="text" name="content" nullable="false" comment="Content"/>
        <column xsi:type="text" name="description" nullable="false" comment="Description"/> 
        <column xsi:type="datetime" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false"/>
        <column xsi:type="datetime" name="updated_at" nullable="true" default="CURRENT_TIMESTAMP" on_update="true"/>
        <column xsi:type="datetime" name="publishdate" nullable="false" default="CURRENT_TIMESTAMP" on_update="false"/>
        <column xsi:type="smallint" name="status" padding="6" unsigned="false" nullable="false" comment="Status"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
    <table name="orra_job_applications" resource="default" engine="innodb"
           comment="orra_job_application Table">
        <column xsi:type="int" name="id" nullable="false" identity="true" comment="Application Id"/>
        <column xsi:type="int" name="career_id" nullable="false" comment="Career ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="20" comment="Name"/>
        <column xsi:type="varchar" name="email" nullable="false" length="50" comment="Email"/>
        <column xsi:type="varchar" name="phone_no" nullable="false" length="50" comment="Phone No."/>
        <column xsi:type="varchar" name="linkedin_profile" nullable="false" length="50" comment="Linkedin Profile"/>
        <column xsi:type="varchar" name="cv" nullable="false" length="50" comment="Applicant CV Document"/>
        <column xsi:type="varchar" name="location" nullable="false" length="50" comment="Location"/>
        <column xsi:type="varchar" name="website" nullable="false" length="50" comment="Website"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
        <column name="id" />
        </constraint>
        </table>
</schema>

