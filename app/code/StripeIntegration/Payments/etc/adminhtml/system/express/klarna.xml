      <source_model>StripeIntegration\Payments\Model\Adminhtml\Source\Express\Klarna\ButtonType</source_model>
      <config_path>payment/stripe_payments_express/klarna_button_type</config_path>
      <depends>
        <field id="enabled">1</field>
      </depends>
    </field>
    <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Sort order</label>
      <frontend_class>validate-number</frontend_class>
      <config_path>payment/stripe_payments/klarna_sort_order</config_path>
      <depends>
        <field id="enabled">1</field>
      </depends>
    </field>
    <depends>
      <field id="global_enabled">1</field>
    </depends>
 </group>
</include>